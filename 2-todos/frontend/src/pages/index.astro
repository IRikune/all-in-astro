---
import LandingLayout from "../layouts/LandingLayout.astro";
import { Button } from "../components/preact/Button";
---


<LandingLayout title="Garnet">

	<svg
		class="fixed top-0 left-0 -z-10 opacity-10"
		viewBox="0 0 200 200"
		xmlns="http://www.w3.org/2000/svg"
	>
		<path
			fill="#8B0836"
			d="M47.6,-63.7C62.5,-54.7,76,-41.9,81.1,-26.4C86.1,-10.8,82.7,7.5,76,23.6C69.3,39.8,59.3,53.9,46.1,60.9C32.9,67.9,16.5,67.9,-0.3,68.3C-17,68.6,-33.9,69.3,-46.3,62C-58.7,54.7,-66.4,39.4,-72.8,22.9C-79.2,6.4,-84.1,-11.3,-78.9,-25.1C-73.7,-38.9,-58.2,-48.9,-43.4,-57.9C-28.5,-67,-14.3,-75.1,1,-76.6C16.3,-78,32.7,-72.7,47.6,-63.7Z"
			transform="translate(100 100)"
		>
		</path>
	</svg>
	<section class="">
		<div
			class="mx-auto max-w-screen-xl px-4 py-32 lg:flex lg:h-screen lg:items-center"
		>
			<div class="mx-auto text-center">
				<h1 class="text-3xl font-extrabold sm:text-5xl">
					Your ideas, streamlined.
					<strong class="font-extrabold text-red-700 sm:block">
						<span
							class="bg-clip-text text-transparent from-rose-900 to-rose-700 bg-gradient-to-l"
							>Garnet
						</span>
						turns tasks into clarity.
					</strong>
				</h1>
				<div class="mt-8 flex flex-wrap justify-center gap-4">
					<a
						class="block w-full rounded-sm bg-red-600 px-12 py-3 text-sm font-medium text-white shadow-sm hover:bg-red-700 focus:ring-3 focus:outline-hidden sm:w-auto"
						href="/dashboard/today"
					>
						Get Started
					</a>
	
					<Button class="block w-full rounded-sm bg-red-600 px-12 py-3 text-sm font-medium text-white shadow-sm hover:bg-red-700 focus:ring-3 focus:outline-hidden sm:w-auto" to="/dashboard/login">login</Button>

					<Button class="block w-full rounded-sm bg-red-600 px-12 py-3 text-sm font-medium text-white shadow-sm hover:bg-red-700 focus:ring-3 focus:outline-hidden sm:w-auto" to="/dashboard/register">register</Button>
				</div>
			</div>
		</div>
	</section>
</LandingLayout>
