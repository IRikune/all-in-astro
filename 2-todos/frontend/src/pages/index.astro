---
import LandingLayout from "../layouts/LandingLayout.astro";
import { Button } from "../components/preact/Button";
import { Header } from "../components/preact/landing/Navigation";
import { Comments } from "../components/preact/landing/Comments";
---

<LandingLayout title="Garnet">
	<Header />

	<section class="">
		<div
			class="mx-auto max-w-screen-xl px-4 py-32 lg:flex lg:h-screen lg:items-center"
		>
			<div class="mx-auto text-center">
				<h1 class="text-3xl font-extrabold sm:text-5xl">
					Your ideas, streamlined.
					<strong class="font-extrabold text-red-700 sm:block">
						<span
							class="bg-clip-text text-transparent from-rose-900 to-rose-700 bg-gradient-to-l"
							>Garnet
						</span>
						turns tasks into clarity.
					</strong>
				</h1>
				<div class="mt-8 flex flex-wrap justify-center gap-4">
					<a
						class="block w-full rounded-sm bg-red-600 px-12 py-3 text-sm font-medium text-white shadow-sm hover:bg-red-700 focus:ring-3 focus:outline-hidden sm:w-auto"
						href="/dashboard/today"
					>
						Get Started
					</a>

					<Button
						class="block w-full rounded-sm bg-red-600 px-12 py-3 text-sm font-medium text-white shadow-sm hover:bg-red-700 focus:ring-3 focus:outline-hidden sm:w-auto"
						to="/dashboard/login">login</Button
					>

					<Button
						class="block w-full rounded-sm bg-red-600 px-12 py-3 text-sm font-medium text-white shadow-sm hover:bg-red-700 focus:ring-3 focus:outline-hidden sm:w-auto"
						to="/dashboard/register">register</Button
					>
				</div>
			</div>
		</div>
	</section>
	<Comments />
</LandingLayout>
