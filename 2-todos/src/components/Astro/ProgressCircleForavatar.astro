---
interface Props{
    tasks:number
    progress:number
    tasksCompleted?:boolean
    classs?:string

}
const {tasks, progress, tasksCompleted, classs} = Astro.props

const grados = 360 * (progress / tasks)

const taskAndCompleted = tasksCompleted?`orange 360deg`:`green ${progress==0?0:grados}deg`
const cssVarStyles = `--completed: ${taskAndCompleted}`
---

<div class={`circle w-10 h-10 rounded-full flex items-center justify-center bg-[conic-gradient(green,white)] ${classs}`} style={cssVarStyles}>
    <div class={'w-9 h-9 bg-white rounded-full flex '} >
        <slot/>
    </div>
</div>

<style>
   
    .circle {
    position: relative;
    border-radius: 50%;
    background: conic-gradient(
       var(--completed), rgb(238, 238, 238) 0deg
    );
}
</style>