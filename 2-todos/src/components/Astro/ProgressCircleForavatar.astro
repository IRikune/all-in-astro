---
interface Props{
    tasks:number
    progress:number
    tasksCompleted?:boolean
    clases?:string

}
const {tasks, clases, progress , tasksCompleted} = Astro.props

const grados = 360 * (progress / tasks)

const taskAndCompleted = tasksCompleted?`orange 360deg`:`green ${progress==0?0:grados}deg`
const cssVarStyles = `--completed: ${taskAndCompleted}`
---

<div class="circle w-10 h-10 rounded-full flex items-center justify-center " style={cssVarStyles}>
    <div id="context-avatar" class={`w-8 h-8 bg-white rounded-full ${clases}`} >
        <slot/>
    </div>
</div>

<style>
        .circle {
        position: relative;
        border-radius: 50%;
        background: conic-gradient(
        var(--completed), rgb(238, 238, 238) 0deg
        );
}
</style>