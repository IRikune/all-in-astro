---
import { Button } from "../preact/Button";
import { Icon } from "../preact/icons/Icon";
import ProgressCircleForAvatar from "./ProgressCircleForavatar.astro";
import { Avatar } from "../preact/Avatar";
---

<section class="flex flex-col w-64 bg-neutral-100/50 rounded-r-lg">
    <section class="flex items-center">
        <ProgressCircleForAvatar
            tasks={8}
            progress={7}
            class="overflow-hidden items-center"
        >
            <Avatar class="w-9 h-9 rounded-full -z-10" seed="HOLAAA" />
        </ProgressCircleForAvatar>
        <span class="ml-1">nander</span>
        <select class="mr-16"></select>
        <Icon
            class="w-4 fill-transparent stroke-neutral-500 stroke-2 mr-3"
            name="bell"
        />
