---
import { Button } from "../preact/Button";
import { Icon } from "../preact/icons/Icon";
import { DropDown } from "../preact/DropDown";

interface Props {
    class?:string
}

const { pathname: currentPage } = Astro.url;
const { class:className } = Astro.props
---
<nav
    class=`w-64 bg-neutral-100/50 rounded-r-lg p-3 flex flex-col justify-between ${className}`
>
    <div>
        <section class=`flex  relative h-8 items-center justify-between `>
            <DropDown client:load class="m-0" />
            <Button class="w-fit absolute *:mr-0 *:px-0 right-8" icon="bell" />
            </div>
        </section>
        <section class="my-2">
            <Button
                class="cursor-pointer flex rounded items-center w-full text-sm text-rose-700 hover:bg-rose-100 transition-all duration-300 my-1"
            >
                <div
                    class="mx-2 w-5.5 h-5.5 rounded-full bg-rose-700 flex items-center justify-center text-sm ml-0"
                >
                    <Icon name="plus" class="w-6 stroke-white" />
                </div>
                Add task
            </Button>
            <Button icon="search"> Search </Button>
            <Button page={currentPage} to="/dashboard/inbox" icon="inbox">
                Inbox
            </Button>
            <Button page={currentPage} to="/dashboard/today" icon="calendar">
                Today
            </Button>
            <Button page={currentPage} to="/dashboard/upcoming" icon="sunrise">
                Upcoming
            </Button>
            <Button page={currentPage} to="/dashboard/filters" icon="grid">
                Filters & labels
            </Button>
        </section>
    </div>

    <section class="">
        <Button icon="plus" to="/">Logout</Button>
    </section>
</nav>
