---
import { Icon } from './preact/icons/Icon';
import { Avatar } from './preact/Avatar';
import { Button } from './preact/Button';
---

<nav class="flex flex-col w-64 bg-neutral-100/50 rounded-r-lg">
    <section class="flex items-center">
        <div class="flex">
            <Avatar client:load seed="HOLAAA" class="w-10 h-10 rounded-full" />
        </div>
        <div class="flex">
            <Icon class="w-4 fill-transparent stroke-neutral-500 stroke-2" name="bell" />
            <Icon class="w-4 fill-transparent stroke-neutral-500 stroke-2" name="sidebar" />
        </div>
    </section>
    <section class="my-2">
        <button 
        class="cursor-pointer flex rounded items-center w-full x-2 py-1 text-sm text-orange-700 hover:bg-orange-200 transition-all duration-300">
            <div class="mx-2 w-6 h-6 rounded-full bg-orange-700 flex items-center justify-center text-sm">
                <Icon name="plus" class="w-6 stroke-white" />
            </div>
            <span class="text-sm">Add task</span>
        </button>
